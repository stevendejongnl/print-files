#!/bin/bash
# Pre-commit hook: Validate YAML workflow files before committing

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit validation...${NC}"

# Check if validate-yaml.sh exists
if [ ! -f "./scripts/validate-yaml.sh" ]; then
    echo -e "${RED}Error: scripts/validate-yaml.sh not found${NC}"
    exit 1
fi

# Run validation
if ./scripts/validate-yaml.sh; then
    echo -e "${GREEN}✅ Pre-commit validation passed${NC}"
    exit 0
else
    echo -e "${RED}❌ Pre-commit validation failed${NC}"
    echo -e "${YELLOW}Fix the errors above and try again.${NC}"
    exit 1
fi
